<h1><%= @restaurant.name %></h1>

<ul>
<li> Address: <%= @restaurant.address %></li>
<li> Phone Number: <%= @restaurant.phone_number %> </li>
</ul>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> ||| Rating: <%= review.rating %>
    <%= link_to "Delete",
    review_path(review),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %></li>
  <% end %>
</ul>
<br>

<p><%= link_to "Add a new review", new_restaurant_review_path(@restaurant) %></p>

<p><%= link_to "Back to restaurants", restaurants_path %></p>
